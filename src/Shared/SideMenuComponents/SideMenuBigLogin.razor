@inject IConfiguration Configuration

<SideMenuContainer>
    <SideMenuChainsBlock>
        <BigFatButton href="/login">
            @LoginLabel
        </BigFatButton>
        <div class="create-account-wrapper">
            <NavLink href="/create-account">
                @CreateAccountLabel
            </NavLink>
        </div>
    </SideMenuChainsBlock>
</SideMenuContainer>

@code {
    string LoginLabel => Configuration.GetValue<string>("Server:Labels:BigLogin");
    string CreateAccountLabel => Configuration.GetValue<string>("Server:Labels:BigLoginCreateAccount");
}