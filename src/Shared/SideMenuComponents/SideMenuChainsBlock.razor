<div class='side-menu-chains-block @((Show) ? "" : "hide")' style="@GetHeightStyle()">
    <div class="chains"></div>
    @if (BlankContent)
    {
        @ChildContent
    }
    else
    {
        <div class="content-body">
            @ChildContent
        </div>
    }
    <div class="chains"></div>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool BlankContent { get; set; }

    [Parameter]
    public int? Height { get; set; }

    [Parameter]
    public bool Show { get; set; } = true;

    string GetHeightStyle()
    {
        var value = (Height?.ToString() + "px") ?? "unset";

        return $"--max-height:{value};";
    }
}